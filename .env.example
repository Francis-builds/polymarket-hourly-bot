# Polymarket Bot Configuration
# Copy this file to .env and fill in your values

# ===================
# WALLET & BLOCKCHAIN
# ===================
# Private key of your dedicated trading wallet (WITH 0x prefix)
# IMPORTANT: Use a NEW wallet, not your main one!
POLYMARKET_PRIVATE_KEY=0x...

# Polygon RPC URL (get free one from Alchemy or Infura)
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# ===================
# TELEGRAM
# ===================
# Create bot with @BotFather, get token
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Your chat ID (send /start to @userinfobot to get it)
TELEGRAM_CHAT_ID=123456789

# ===================
# TRADING PARAMETERS
# ===================
# Buy when UP + DOWN < this value (accounts for ~3% fees)
DIP_THRESHOLD=0.96

# Minimum profit after fees to execute trade
MIN_PROFIT=0.03

# Maximum USD per trade
MAX_POSITION_SIZE=100

# Maximum simultaneous open positions
MAX_OPEN_POSITIONS=3

# Cooldown between trades on same market (ms)
COOLDOWN_MS=30000

# ===================
# ENVIRONMENT
# ===================
# Set to 'production' in GCP
NODE_ENV=development

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ===================
# PAPER TRADING
# ===================
# Set to 'true' to simulate trades without executing
PAPER_TRADING=true

# Simulate random dips for testing (only in paper mode)
SIMULATE_DIPS=true
